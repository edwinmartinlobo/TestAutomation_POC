{
  "name": "test-automation-suites",
  "version": "1.0.0",
  "description": "Test suites for mobile and API testing",
  "scripts": {
    "test:android": "wdio run test-suites/mobile/android/config/wdio.android.conf.ts",
    "test:ios": "wdio run test-suites/mobile/ios/config/wdio.ios.conf.ts",
    "test:api": "mocha test-suites/api/tests/**/*.test.ts --require ts-node/register",
    "test:all": "npm run test:android && npm run test:ios && npm run test:api"
  },
  "dependencies": {
    "webdriverio": "^8.31.0",
    "@wdio/cli": "^8.31.0",
    "@wdio/local-runner": "^8.31.0",
    "@wdio/mocha-framework": "^8.31.0",
    "@wdio/spec-reporter": "^8.31.0",
    "appium": "^2.4.1",
    "axios": "^1.6.5",
    "chai": "^4.4.1",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  }
}
