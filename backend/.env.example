# Server Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# Database
DATABASE_URL=postgresql://testuser:testpass123@localhost:5432/test_automation
DB_POOL_MIN=2
DB_POOL_MAX=10

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.2

# Appium Configuration
APPIUM_HOST=localhost
APPIUM_PORT=4723
APPIUM_PATH=/
APPIUM_PROTOCOL=http

# MinIO Storage Configuration
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET=test-artifacts
MINIO_REGION=us-east-1

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Self-Healing Configuration
SELF_HEALING_ENABLED=true
SELF_HEALING_THRESHOLD=85
SELF_HEALING_REQUIRE_APPROVAL=true
SELF_HEALING_MAX_RETRIES=3

# Test Execution Configuration
MAX_PARALLEL_TESTS=5
DEFAULT_TEST_TIMEOUT=300000
SCREENSHOT_ON_FAILURE=true
CAPTURE_CONSOLE_LOGS=true

# Notifications
NOTIFICATIONS_ENABLED=false
NOTIFICATION_CHANNELS=console
SLACK_WEBHOOK_URL=
EMAIL_FROM=
EMAIL_TO=

# Logging
LOG_LEVEL=info
LOG_DIR=logs
